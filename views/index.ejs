<!----------------------------- Main Site Section ------------------------------>

<main>

    <!------------------------ Site Title ---------------------->

    <section class="site-title">
        <div class="site-background" data-aos="fade-up" data-aos-delay="100">
            <h3>Virtual-Audio Library</h3>
            <h1>A Free Library Environment</h1>
            <h3>Explore reading new concepts with along with your Homies.</h3>
            <button class="btn"><a href="/dashboard">Explore</a></button>
        </div>
    </section>
    

    <!------------x----------- Site Title ----------x----------->

    <!-- --------------------- Blog Carousel ----------------- -->

    <section>
        <div class="blog">
            <div class="container">
                <div class="owl-carousel owl-theme blog-post">
                    <% let i=0 %> 
                    <% books.forEach(book=>{ %>
                        <% i++ %> 
                        <div class="blog-content" data-aos="fade-right" data-aos-delay="200">
                            <% const bookoid = "/viewbook/type1/"+book._id %> 
                            
                            <a href=<%= bookoid %> ><img class="book-cover" src="<%= book.coverImagePath  %> " alt="post-1"></a>
                            <div class="blog-title">
                                <h3><%= book.title %> At Trending#<%= i %></h3>
                            </div>
                        </div>
                    <% }) %> 
                <div class="owl-navigation">
                    <span class="owl-nav-prev"><<</span>
                    <span class="owl-nav-next">>></span>
                </div>
            </div>
        </div>
    </section>

    <!-- ----------x---------- Blog Carousel --------x-------- -->

    <!-- ---------------------- Site Content -------------------------->

    <section class="container">
        <div class="site-content">
            <div class="posts">
                <div class="post-content" data-aos="zoom-in" data-aos-delay="200">
                    <div class="post-image">
                        <div>
                            <img src="<%= books[0].coverImagePath  %> " class="img" alt="blog1">
                        </div>
                        <div class="post-info flex-row">
                            <span><i class="fas fa-user text-gray"></i>&nbsp;&nbsp;<%= books[0].title  %> </span>
                            <span><i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp;Trending #1</span>
                        </div>
                    </div>
                </div>
               <hr>

            </div>
            <aside class="sidebar">
                <div class="category">
                    <h2>Collection</h2>
                    <ul class="category-list">
                        <% categories.forEach(category=>{ %>
                            <li class="list-items" data-aos="fade-left" data-aos-delay="100">
                                <a href="/viewbook/category/<%= category.category %> "><%= category.category %></a>
                                <span>(<%= category.count %> )</span>
                            </li>    
                        <% }) %> 
                    </ul>
                </div>

            </aside>
        </div>
    </section>

    <!-- -----------x---------- Site Content -------------x------------>

</main>

<!---------------x------------- Main Site Section ---------------x-------------->


