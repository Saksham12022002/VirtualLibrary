  <!--Left part-->
  <div class="split left">
    <div class="centered">
      <div class="top-bar">
        <div class="but">
        <button class="btn" id="prev-page">
          <i class="fas fa-arrow-circle-left"></i> Prev Page
        </button>
        <button class="btn" id="next-page">
          Next Page <i class="fas fa-arrow-circle-right"></i>
        </button>
        <span class="page-info">
          <span id="page-num"></span>/<span id="page-count"></span>
        </span>
        
      </div>
      </div>
      <div class="Section"></div>
      <canvas id="pdf-render"></canvas>
    </div>
  </div>
  <!--Left part-->




  <!--Right Section-->
  <div class="split right">
    <div class="centered">
      <div class="chat-container">
        <header class="chat-header">
          <% const path = "data:application/pdf;base64,"+bk.pdfPath.substr(41,bk.pdfPath-42) %> 
          <h4><a download=pdfTitle href=<%= path %>  title=<%= room %>  class="btn3">Download PDF</a>
          <a href="/dashboard" class="btn">Home</a>
        </header>
        <main class="chat-main">
          <div class="chat-sidebar">
            <h3><i class="fas fa-comments"></i> Room Name:</h3>
            <h2 id="room-name"><%= room %> </h2>
            </ul>
            <button class="btn3" id="togglebtn"><a  href="/room/voice/<%= bk._id %>" target="_blank">Join Voice</a></button>
          </div>
          
          <div class="chat-messages">
          </div>
        </main>
        <div class="chat-form-container">
          <form id="chat-form">
            
            <input
              id="msg"
              type="text"
              placeholder="Enter Message"
              required
              autocomplete="off" />
            <button class="btn2">
              
              <i class="fas fa-paper-plane"></i> Send</button>
              
            
          </form>
        </div>
    </div>
  </div>
  <div id="pdf" style="display: none">
    <%= pdf %> 
  </div>

  <!--Right part-->
